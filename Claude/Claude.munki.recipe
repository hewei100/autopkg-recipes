<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads latest Claude app zip and imports it into Munki.</string>
    <key>Identifier</key>
    <string>com.github.hewei100.munki.Claude</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>Claude</string>
        <key>MUNKI_REPO_SUBDIR</key>
        <string>apps</string>
        <key>APP_PATH</key>
        <string>/Applications/Claude.app</string>
        <key>BUNDLE_ID</key>
        <string>com.anthropic.claudefordesktop</string>
        <key>pkginfo</key>
        <dict>
            <key>catalogs</key>
            <array>
                <string>testing</string>
            </array>
            <key>category</key>
            <string>Productivity</string>
            <key>description</key>
            <string>Anthropic's official Claude AI desktop app.</string>
            <key>developer</key>
            <string>Anthropic PBC</string>
            <key>display_name</key>
            <string>Claude</string>
            <key>minimum_os_version</key>
            <string>12.0</string>
            <key>name</key>
            <string>%NAME%</string>
            <key>unattended_install</key>
            <false/>
        </dict>
    </dict>
    <key>MinimumVersion</key>
    <string>1.0.0</string>
    <key>ParentRecipe</key>
    <string>com.github.hewei100.pkg.Claude</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Processor</key>
            <string>SetAppInstallsFromVersion</string>
            <key>Arguments</key>
            <dict>
                <key>app_path</key>
                <string>%APP_PATH%</string>
                <key>bundle_id</key>
                <string>%BUNDLE_ID%</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>MunkiImporter</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%pkg_path%</string>
                <key>repo_subdirectory</key>
                <string>%MUNKI_REPO_SUBDIR%</string>
            </dict>
        </dict>
    </array>
</dict>
</plist>
